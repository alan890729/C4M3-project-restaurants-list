<div class="container">

    <div class="row">

        <div class="col-md-10 col-12 mx-auto">

            <h1 class="my-3">登入</h1>

            {{> flash-msg}}

            <form action="/login" method="post" class="mb-3">

                <div class="row mb-3">
                    <div class="col-md-4 d-flex align-items-center">
                        <label for="email" class="form-label mb-0">電子郵件</label>
                    </div>
                    <div class="col-md-8">
                        <input type="email" class="form-control" id="email" name="email" placeholder="輸入電子郵件" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4 d-flex align-items-center">
                        <label for="password" class="form-label mb-0">密碼</label>
                    </div>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="password" name="password" placeholder="輸入密碼" required>
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn btn-light">登入</button>
                </div>

            </form>

            <div class="mb-3">
                <form action="/login/facebook">
                    <button type="submit" class="btn btn-light">Facebook登入</button>
                </form>
            </div>

            <div>
                <span class="form-text">還沒有帳號嗎？</span>
                <a href="/register">
                    <button type="button" class="btn btn-light">註冊帳號</button>
                </a>
            </div>

        </div>

    </div>

</div>